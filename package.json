{
  "name": "proshop-v2",
  "version": "2.0.0",
  "description": "ProShop E-Commerce Application built with MERN Stack",
  "main": "server.js",
  "author": "Indranil Halder <indranilhalder.dev@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "lint:check": "eslint --ext .js,.jsx ./ --no-error-on-unmatched-pattern",
    "lint:fix": "eslint --ext .js,.jsx ./ --no-error-on-unmatched-pattern --fix",
    "prettier": "prettier \"**/*.+(json|js|jsx)\"",
    "format:check": "npm run prettier -- --check",
    "format:fix": "npm run prettier -- --write",
    "prepare": "husky install",
    "start": "node server/server",
    "server": "nodemon server/server",
    "client": "yarn --cwd client dev",
    "client:install": "yarn --cwd client install",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "data:import": "node server/seeder",
    "data:destroy": "node server/seeder -d",
    "build": "yarn && yarn --cwd client install && yarn --cwd client build"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.3.1",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^8.43.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8"
  }
}
